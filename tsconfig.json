{
  "compilerOptions": {
    "allowJs": true,
    "module": "esNext",
    "target": "es5",
    "jsx": "react",
    "moduleResolution": "node",
    "lib": ["es2015", "dom"],
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],
      "@web/*": ["./src/web/*"]
    }
  },
  "include": [
    "src"
  ],
  "exclude": [
    "node_modules"
  ]
}